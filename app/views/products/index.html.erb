<div class="row">
  <div class="col-md-2 centered">
    <%= link_to "Add a product", new_product_path, class: "btn btn-default" %>
  </div>
  <div class="col-md-8">
    <h2 class="centered">
      Products
    </h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= link_to product.category.name, category_path(product.category.id) %></td>
          <td><%= link_to "show", product_path(product.id) %></td>
          <td><%= link_to "edit", edit_product_path(product.id) %></td>
          <td><%= link_to "delete", product_path(product.id), data: {confirm: "Are you sure?"}, method: :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
