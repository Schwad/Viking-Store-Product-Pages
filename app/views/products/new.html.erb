<h3>
  Create a new
</h3>

<%= form_for @product do |f| %>

  <p>ID: N/A</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :category %>
  <%= f.select :category, options_for_select(@list_of_category_names) %>

  <%= f.submit %>
<% end %>