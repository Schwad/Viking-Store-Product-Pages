<h3>
  Create a new
</h3>

<%= form_for @product do |f| %>

  <p>ID: N/A</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>

  <%= f.submit %>
<% end %>