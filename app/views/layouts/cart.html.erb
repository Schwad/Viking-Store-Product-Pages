<!DOCTYPE html>
<html>
<head>
  <title>Viking Store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "/shared/navbar" %>
  <div class="container">
    <div class="row">
      <div class="col-12-md centered">
       <% flash.each do |name, message| %>
          <%= content_tag :div, message, class: "alert alert-info" %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <p>CONTACT</p>
          <p>1 - 000 - 000 - 0000</p>
          <%= link_to "contact@vikingstore.com", "#" %>
        </div>
        <div class="col-md-2 col-md-offset-2">
          <%= link_to "Admin Login", "#" %>
        </div>
          
          
    </div>
  </footer>
</body>
</html>