<!DOCTYPE html>
<html>
<head>
  <title>Viking Store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "/users/navbar" %>
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-12 centered">
          <h1>The Viking Store</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 centered">
          <h2>The Best Viking Gear on the Whole Web</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 centered">
          <h3>Choose from among our lineup of fine items below</h3>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12-md centered">
       <% flash.each do |name, message| %>
          <%= content_tag :div, message, class: "alert alert-info" %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <!-- footer here;-->
</body>
</html>