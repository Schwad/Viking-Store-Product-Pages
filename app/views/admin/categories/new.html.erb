<h2>
  Create a new category
</h2>

<% flash.each do |name, message| %>
  <%= content_tag :div, message, class: "alert alert-info" %>
<% end %>

<%= form_for @category do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Create" %>
<% end %>